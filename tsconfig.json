{
  "compilerOptions": {
    "target": "es6",                     
    "module": "commonjs",               
    "outDir": "./dist",                 
    "rootDir": "./src",                  
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,          
    "moduleResolution": "node",          
    "allowSyntheticDefaultImports": true 
  },
  "include": [
    "src/**/*"                           
  ],
  "exclude": [
    "node_modules",                     
    "dist"
  ]
}
